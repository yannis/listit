<%= turbo_frame_tag resource do %>
  <%= render "layouts/flash" %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-6" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div>
      <%= f.email_field :email, autofocus: true, placeholder: "E-mail", autocomplete: "email", required: true %>
      <%= f.submit "Sign in", class: "btn" %> or <%= link_to "Sign up", new_registration_path(resource_name), class: "link" %>
    </div>
  <% end %>
<% end %>
