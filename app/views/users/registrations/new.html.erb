<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-6" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div>
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail", autocomplete: "email", required: true %>
    <%= f.submit "Sign up", class: "btn" %> or <%= link_to "Sign in", new_session_path(resource_name), class: "link" %>
  </div>
<% end %>
