<%= link_to list do %>
  <div class="bg-gray-100 mb-4 py-2 px-3">
    <p class="text-gray-500 text-sm">
      <%= list_details(list) %>
    </p>
    <div class="flex justify-between">
      <h2 class="text-2xl align-text-bottom link">
        <%= list.name %>
      </h2>
      <p class="align-text-bottom mt-2 link">
        <%= pluralize(list.items.size, 'items') %>
      </p>
    </div>
  </div>
<% end %>
