<%= turbo_frame_tag "flash" do %>
  <%- flash.each do |key, value| %>
    <%-
      if value.present?
        fclass = ['alert']
    %>
      <div class="<%= fclass.flatten.uniq.compact.join(" ") %>" role="alert">
        <div class="container">
          <%= value %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
